#!/usr/bin/env ruby

$:.unshift(File.dirname(__FILE__) + '/../lib')

require 'algorithm'
require 'individual'
require 'match_strategy'

strategy = MatchStrategy.new(Individual.generate.genes)

population = Population.generate(:size => 50, :fitness_strategy => strategy)

generation_count = 0
while population.fittest.fitness < strategy.max_fitness
  generation_count += 1
  puts "Generation: #{generation_count} Fittest: #{population.fittest.fitness}"
  population = Algorithm.evolve(population)
end

puts
puts "Solution found!"
puts "Generation: #{generation_count}"
puts "Genes: #{population.fittest.genes.inspect}"
